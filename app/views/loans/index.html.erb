<p id="notice"><%= notice %></p>

<h1>Listing Loans</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Notes</th>
      <th>Tax rate</th>
      <th>Start date</th>
      <th>Estimated end date</th>
      <th>Monthly amout</th>
      <th>Quotas</th>
      <th>Quota amount</th>
      <th>Quotas payed</th>
      <th>Quotas delayed</th>
      <th>Payed amount</th>
      <th>Total earnings</th>
      <th>Earning per quota</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.customer %></td>
        <td><%= loan.status %></td>
        <td><%= loan.amount %></td>
        <td><%= loan.currency %></td>
        <td><%= loan.notes %></td>
        <td><%= loan.tax_rate %></td>
        <td><%= loan.start_date %></td>
        <td><%= loan.estimated_end_date %></td>
        <td><%= loan.monthly_amout %></td>
        <td><%= loan.quotas %></td>
        <td><%= loan.quota_amount %></td>
        <td><%= loan.quotas_payed %></td>
        <td><%= loan.quotas_delayed %></td>
        <td><%= loan.payed_amount %></td>
        <td><%= loan.total_earnings %></td>
        <td><%= loan.earning_per_quota %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

